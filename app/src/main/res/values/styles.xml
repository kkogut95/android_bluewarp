<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Error" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/colorRedError</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/tv_text_white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/tv_medium</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_base_height</item>
        <item name="android:layout_marginStart">@dimen/button_base_margin_horizontal</item>
        <item name="android:layout_marginEnd">@dimen/button_base_margin_horizontal</item>
    </style>

    <style name="BaseInputStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
    </style>
</resources>
