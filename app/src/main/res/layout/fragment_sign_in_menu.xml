<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/base_background"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_login_menu_logo"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_margin="32dp"
            app:layout_constraintTop_toTopOf="parent"/>

        <include
            android:id="@+id/et_login_menu_email"
            style="@style/BaseInputStyle"
            layout="@layout/layout_material_input"
            app:hint="@{@string/email_label}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_login_menu_logo"/>

        <include
            android:id="@+id/et_login_menu_password"
            style="@style/BaseInputStyle"
            layout="@layout/layout_material_input"
            app:hint="@{@string/password_label}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_login_menu_email"/>

        <Button
            style="@style/ButtonStyle"
            android:background="@drawable/button_base_round"
            android:text="@string/login_label"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_login_menu_password"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>